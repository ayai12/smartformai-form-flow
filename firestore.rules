rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Forms
    match /forms/{formId} {
      // Public read if form is published
      allow read: if resource.data.publishedLink != null;
      // Full access for form owner
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      // Only owners can create forms
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      
      // AI Summaries subcollection
      match /ai_summaries/{summaryId} {
        // Form owner can read/write AI summaries
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/forms/$(formId)).data.ownerId == request.auth.uid;
      }
    }

    // Survey responses
    match /survey_responses/{responseId} {
      // Only owner of the form can read responses
      allow read: if request.auth != null &&
        resource.data.formId is string &&
        get(/databases/$(database)/documents/forms/$(resource.data.formId)).data.ownerId == request.auth.uid;
      // Allow public write (for form submissions)
      allow write: if true;
    }

    // Agents
    match /agents/{agentId} {
      // Full access for agent owner (support both userId and ownerId for backward compatibility)
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.ownerId == request.auth.uid
      );
      // Only users can create their own agents
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.ownerId == request.auth.uid
      );
    }

    // Credit History
    match /credit_history/{historyId} {
      // Users can only read their own credit history
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Users can write their own credit history entries
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // No updates or deletes allowed
      allow update, delete: if false;
    }

    // Users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /paymentMethods/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /billingHistory/{document=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Subscriptions
    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}