# Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Legacy OpenAI support (optional - will fallback if GEMINI_API_KEY not set)
# OPENAI_API_KEY=your_openai_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=smartformai-51e03

# Firebase Service Account (JSON string or path)
# Option 1: Use JSON string directly
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"smartformai-51e03",...}

# Option 2: Use path to service account file (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys (Secret key)
# and https://dashboard.stripe.com/webhooks (Webhook signing secret)
STRIPE_SECRET_KEY=sk_live_xxx_or_sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Note: For production, use Firebase config instead:
# firebase functions:config:set stripe.secret="sk_live_xxx" stripe.webhook="whsec_xxx"
